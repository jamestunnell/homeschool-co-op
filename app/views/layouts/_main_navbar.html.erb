<%= nav_bar(:brand => image_tag('logo.png', size: "160x45"),
            :brand_link => root_path, :responsive => true) do %>
  <%= menu_group :pull => :left do %>
    <%= menu_item "Home", root_path %>
    <%= drop_down "About" do %>
      <%= menu_item "Mission", about_path %>
      <%= menu_item "Locations", buildings_path %>
    <% end %>
    <%= drop_down "Classes" do %>
      <%= menu_item "Register", register_path %>
      <%= menu_item "Terms", terms_path %>
      <%= menu_item "Subjects", subjects_path %>
    <% end %>
    <%= menu_item "Contact", contact_path %>
  <% end %>
  
  <%= menu_group :pull => :right do %>
    <% if user_signed_in? %>
      <%= menu_item "Students", students_path %>
      <%= menu_item "Enrollments", enrollments_path %>
      <%= menu_item "Account", user_path(current_user) %>
      <%= menu_item "Log Out", destroy_user_session_path, :method => :delete %>
    <% else %>
      <%= menu_item "Sign Up", new_user_registration_path %>
      <%= menu_item "Log In", new_user_session_path %>
    <% end %>
  <% end %>
<% end %>