<%= nav_bar(:brand => image_tag('logo.png', size: "160x45"),
            :brand_link => root_path, :responsive => true) do %>
  <%= menu_group :pull => :left do %>
    <%= menu_item "Home", root_path %>
    <%= menu_item "About", about_path %>
    <%= menu_item "Contact", contact_path %>
    <%= drop_down "Getting Started" do %>
      <%= menu_item "For Parents", quickstart_parents_path %>
      <%= menu_item "For Instructors", quickstart_instructors_path %>
    <% end %>
    <%= drop_down "Classes" do %>
      <%= menu_item "Current", current_path %>
      <%= menu_item "Upcoming", upcoming_path %>
    <% end %>
    <%= menu_item "Events", events_path %>
    <%= drop_down "More" do %>
      <%= menu_item "Locations", buildings_path %>
      <%= menu_item "All Terms", terms_path %>
      <%= menu_item "Courses", courses_path %>
      <%= menu_item "Subjects", subjects_path %>
      <%= menu_item "Instructors", instructors_path %>
      <%= menu_item "Parent Agreement", agreement_path(:parent) %>
    <% end %>
    
  <% end %>
  
  <%= menu_group :pull => :right do %>
    <% if user_signed_in? %>
      <%= menu_item "Account", account_path %>
      <%= menu_item "Log Out", destroy_user_session_path, :method => :delete %>
      <% if !current_user.avatar.blank? %>
        <%= image_tag(current_user.avatar_url(:thumb)) %>
      <% end %>
    <% else %>
      <%= menu_item "Sign Up", new_user_registration_path %>
      <%= menu_item "Log In", new_user_session_path %>
    <% end %>
  <% end %>
<% end %>