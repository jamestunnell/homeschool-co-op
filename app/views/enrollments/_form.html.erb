<%= simple_form_for(@enrollment, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :section_id, collection: Section.not_past, include_blank: false,
              label_method: :name, value_method: :id %>
  <%= f.input :student_id, collection: current_user.students, include_blank: false,
              label_method: :full_name, value_method: :id %>
  <%= f.button :submit, :class => 'btn btn-primary' %>
  <%= link_to "Cancel", enrollments_path, :class => 'btn btn-default' %>
<% end %>