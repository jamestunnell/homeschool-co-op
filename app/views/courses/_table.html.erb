<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Type</th>
      <% if show_actions %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% courses.each do |course| %>
      <tr>
        <% if active_links %>
          <td><%= link_to course.name, course %></td>
        <% else %>
          <td><%= course.name %></td>
        <% end %>
        <td><%= course.description %></td>
        <td><%= course.type %></td>
        <% if show_actions %>
          <td>
          <%= link_to "Edit", edit_course_path(course), :class => 'btn btn-default btn-xs' %>
          <%= link_to "Remove", course_path(course), :method => :delete,
                      :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
