<%= simple_form_for(@course, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.association :subject, include_blank: false, label_method: :name, value_method: :id %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :workshop %>
  <%= f.button :submit, :class => 'btn btn-primary' %>
  <%= link_to "Cancel", courses_path, :class => 'btn btn-default' %>
<% end %>