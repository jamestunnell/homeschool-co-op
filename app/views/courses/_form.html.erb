<%= simple_form_for(@course, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.association :subject, include_blank: false %>
  <%= f.button :submit, :class => 'btn btn-primary' %>
  <%= link_to "Cancel", children_path, :class => 'btn btn-default' %>
<% end %>
