<%= f.input :first, required: true, autofocus: true, input_html: { maxlength: User::MAX_NAME_LENGTH } %>
<%= f.input :last, required: true, input_html: { maxlength: User::MAX_NAME_LENGTH } %>
<%= f.input :phone, as: :tel, label: 'Phone number' %>
<%= f.input :emergency_name, label: 'Emergency contact name' %>
<%= f.input :emergency_phone, as: :tel, label: 'Emergency contact phone number' %>
<%= f.input :bio, input_html: { maxlength: User::MAX_BIO_LENGTH } %>
<%= f.hidden_field(:avatar_cache) %>
<%= f.input :avatar, as: :file, label: 'Photo' %>
