<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <% if admin %>
        <th>Phone</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= link_to "Send Message", contact_path(:user_id => user.id), :class => 'btn btn-default btn-xs' %></td>
        <% if admin %>
          <td><%= number_to_phone(user.phone, area_code: true) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
