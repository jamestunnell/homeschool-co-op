<%= simple_form_for(@responsibility, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :kind, label: "Type", collection: Responsibility.kinds.keys, include_blank: false%>
  <%= f.association :user, include_blank: false, label_method: :full_name, value_method: :id %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.button :submit, :class => 'btn btn-primary' %>
  <%= link_to "Cancel", responsibilities_path, :class => 'btn btn-default' %>
<% end %>