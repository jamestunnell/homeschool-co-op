<div class="page-header">
  <h2>Scheduling</h2>
</div>

<h3>Terms</h3>
<% if Term.any? %>
  <%= render partial: "terms/table", locals: { :terms => Term.all,
             :show_actions => true, :active_links => true } %>
<% else %>
  There are no terms.
<% end %>
<%= link_to "Add Term", new_term_path, :class => 'btn btn-primary' %>

<h3>Sections</h3>
<% if Section.any? %>
  <%= render partial: "sections/table", locals: {
    :sections => Section.all, :show_actions => true } %>
<% else %>
  There are no sections.
<% end %>
<%= link_to "Add Section", new_section_path, :class => 'btn btn-primary' %>