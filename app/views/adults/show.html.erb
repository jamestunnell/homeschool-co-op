<p id="notice"><%= notice %></p>

<p>
  <strong>First:</strong>
  <%= @adult.first %>
</p>

<p>
  <strong>Last:</strong>
  <%= @adult.last %>
</p>

<p>
  <strong>Email:</strong>
  <%= @adult.email %>
</p>

<%= link_to 'Edit', edit_adult_path(@adult) %> |

<% if @adult.children.any? %>
<h3>Children</h3>
<table border=1>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>

  <% @adult.children.each do |child| %>
  <tr>
    <td><%= child.full_name %></td>
    <td><%= link_to 'Show', child %></td>
    <td><%= link_to 'Edit', edit_child_path(child) %></td>
    <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>
<% end %>

<h4>Add Child</h4>
<%= form_for [@adult,@adult.children.build] do |f| %>
  <div class="field">
    <%= f.label :first %><br>
    <%= f.text_field :first %>
  </div>
  <div class="field">
    <%= f.label :last %><br>
    <%= f.text_field :last %>
  </div>
  <div class="field">
    <%= f.label :birth_date %><br>
    <%= f.date_select :birth_date, start_year: (Time.now.to_date.year-18), end_year: Time.now.to_date.year %>
  </div>
  <div class='actions'>
    <%= f.submit %>
  </div>
<% end %>