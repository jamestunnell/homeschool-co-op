<%= simple_form_for(@session) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :term, collection: Session.terms.keys, include_blank: false %>
    <%= f.input :kind, collection: Session.kinds.keys, include_blank: false %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to "Cancel", sessions_path, :class => 'btn btn-default' %>
  </div>
<% end %>
