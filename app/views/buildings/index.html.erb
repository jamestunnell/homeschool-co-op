<div class="page-header">
  <h2>Buildings</h2>
</div>

<% if Building.any? %>
  <%= render partial: "buildings/table", locals: { :buildings => Building.all,
             :show_actions => @scheduling } %>
<% else %>
  <p>There are no buildings.</p>
<% end %>

<% if @scheduling %>
  <p><%= link_to "Add Building", new_building_path, :class => 'btn btn-primary' %></p>
<% end %>

<% if user_signed_in? %>
  <p><%= link_to raw("&larr; Back to Account"), account_path %></p>
<% end %>
