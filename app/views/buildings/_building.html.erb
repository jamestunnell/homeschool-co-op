<div class="panel panel-default">
  <div class="panel-body">
    <p><strong>Name:</strong> <%= building.name %></p>
    <p><strong>Address:</strong> <%= building.address.oneline %></p>
    <p><strong>Rooms: </strong> <%= building.rooms.map {|r| r.name }.join(", ") %></p>
  </div>
  <% if user_signed_in? %>
    <div class="panel-footer">
            <%= link_to "Edit", edit_building_path(building), :class => 'btn btn-default btn-xs' %>
            <%= link_to "Remove", building_path(building),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
    </div>
  <% end %>
</div>