<%= simple_form_for @building, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  
  <%= f.simple_fields_for :address do |af| %>
    <%= af.input :street %>
    <%= af.input :city %>
    <%= af.input :state, collection: Address.states.keys %>
    <%= af.input :zip, size: 5 %>
  <% end %>
   
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to "Cancel", buildings_path, :class => 'btn btn-default' %>
<% end %>
