<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <% if show_actions %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td><%= building.address.oneline %></td>
        <% if show_actions %>
          <td>
          <%= link_to "Edit", edit_building_path(building), :class => 'btn btn-default btn-xs' %>
          <%= link_to "Remove", building_path(building), :method => :delete,
                      :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
