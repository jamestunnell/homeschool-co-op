<div class="page-header">
  <h2><%= @building.name %> building</h2>
</div>

<h3>Address</h3>
<p><%= @building.address.street %></p>
<p><%= @building.address.city %>, <%= @building.address.state %> <%= @building.address.zip %></p>

<h3>Rooms</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @building.rooms.each do |room| %>
      <tr>
        <td><%= link_to room.name, building_room_path(@building,room) %></td>
        <td>
          <%= link_to "Edit", edit_building_room_path(@building,room), :class => 'btn btn-default btn-xs' %>
          <%= link_to "Remove", building_room_path(@building,room), :method => :delete,
                      :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", buildings_path, :class => 'btn btn-default'  %>
<%= link_to "Edit", edit_building_path(@building), :class => 'btn btn-default' %>
<%= link_to 'Add Room', new_building_room_path(@building), :class => 'btn btn-primary' %>
