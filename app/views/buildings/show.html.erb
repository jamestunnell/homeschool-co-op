<div class="page-header">
  <h2><%= @building.name %> building</h2>
</div>

<h3>Address</h3>
<p><%= @building.address.street %></p>
<p><%= @building.address.city %>, <%= @building.address.state %> <%= @building.address.zip %></p>

<h3>Rooms</h3>
<% if @building.rooms.any? %>
  <%= render partial: "rooms/table", locals: { :rooms => @building.rooms,
             :show_actions => @scheduling } %>
<% else %>
  <p>There are no rooms.</p>
<% end %>

<% if @scheduling %>
  <p><%= link_to "Add Room", new_building_room_path(@building), :class => 'btn btn-primary' %></p>
<% end %>

<p><%= link_to raw("&larr; Back to Buildings"), buildings_path %></p>
