<div class="page-header">
  <h2><%= @child.full_name %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong>Birth date:</strong></dt>
  <dd><%= @child.birth_date %></dd>
</dl>

<%= link_to "Back to Parent", @child.adult, :class => 'btn btn-default'  %>
<%= link_to "Edit", edit_adult_child_path(@child.adult, @child), :class => 'btn btn-default' %>
<%= link_to "Remove", adult_child_path(@child.adult, @child), :method => 'delete',
              :data => { :confirm => 'Are you sure?' },
              :class => 'btn btn-danger' %>
