<div class="page-header">
  <h2><%= @child.full_name %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong>Birth date:</strong></dt>
  <dd><%= @child.birth_date %></dd>
</dl>

<h3>Enrollments</h3>
<% if @child.enrollments.any? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Course</th>
      <th>Term</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @child.enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.section.course.title %></td>
        <td><%= enrollment.section.term.name %></td>
        <td>
          <%= link_to "Show", enrollment_path(enrollment), :class => "btn btn-default btn-xs" %>
          <%= link_to "Edit", edit_enrollment_path(enrollment), :class => "btn btn-default btn-xs" %>
          <%= link_to "Remove", enrollment_path(enrollment),
                      :method => :delete, :class => "btn btn-danger btn-xs",
                      :data => { :confirm => 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>No enrollments have been added.</p>
<% end %>

<%= link_to "Back", @child.adult, :class => 'btn btn-default'  %>
<%= link_to "Edit", edit_child_path(@child), :class => 'btn btn-default' %>
<%= link_to 'Add Enrollment', new_child_enrollment_path(@child), :class => 'btn btn-primary' %>
