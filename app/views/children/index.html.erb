<%= render partial: 'users/user_navbar' %>

<h2>Children of <%= @user.full_name %></h2>
<% if @children.any? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.full_name %></td>
        <td><%= child.years_old %></td>
        <td>
          <%= link_to "Show", child_path(child), :class => "btn btn-default btn-xs" %>
          <%= link_to "Edit", edit_child_path(child), :class => "btn btn-default btn-xs" %>
          <%= link_to "Remove", child_path(child),
                      :method => :delete, :class => "btn btn-danger btn-xs",
                      :data => { :confirm => 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>No children have been added.</p>
<% end %>

<%= link_to 'Add Child', new_user_child_path(@user), :class => 'btn btn-primary' %>