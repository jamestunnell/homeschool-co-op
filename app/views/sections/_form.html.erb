<%= simple_form_for [@section.session, @section], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :session, as: :hidden %>
  <%= f.association :course, include_blank: false %>
  <%= f.association :adult, :label_method => :full_name %>
  <%= f.association :room, :label_method => lambda {|x| "#{x.name} at #{x.building.name} building"} %>
  <%= f.simple_fields_for :meeting_day_time, :html => { :class => 'form-inline' } do |ff| %>
    <%= ff.input :day, collection: MeetingDayTime.days.keys %>
    <%= ff.input :start_time %>
    <%= ff.input :end_time %>
  <% end %>
  <%= f.input :fee %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to "Cancel", @section.session, :class => 'btn btn-default' %>
<% end %>
