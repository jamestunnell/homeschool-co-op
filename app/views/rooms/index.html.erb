<div class="page-header">
  <h2>Rooms</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Building</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= link_to room.name, room_path(room) %></td>
        <td><%= link_to room.building.name, building_path(room.building) %></td>
        <td>
          <%= link_to "Edit", edit_room_path(room), :class => 'btn btn-default btn-xs' %>
          <%= link_to "Destroy", room_path(room),
                      :method => :delete,
                      :data => { :confirm => 'Are you sure?' },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New", new_room_path, :class => 'btn btn-primary' %>
