<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Building</th>
      <th>Capacity</th>
      <% if show_actions %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.building.name %></td>
        <td>Unknown</td>
        <% if show_actions %>
          <td>
          <%= link_to "Edit", edit_room_path(room.building,room), :class => 'btn btn-default btn-xs' %>
          <%= link_to "Remove", room_path(room.building,room), :method => :delete,
                      :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
