<%= simple_form_for(@student, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :first %>
  <%= f.input :last %>
  <%= f.input :birth_date,
              :start_year => (Time.now.to_date.year-18),
              :end_year => Time.now.to_date.year,
              :discard_day => true, order: [:month, :year] %>
  <%= f.association :user, as: :hidden %>
  <%= f.input :medical, label: "Medical/dietary considerations, including allergies" %>
  <%= f.button :submit, "Add Child", :class => 'btn btn-primary' %>
  <%= link_to "Cancel", students_path, :class => 'btn btn-default' %>
<% end %>