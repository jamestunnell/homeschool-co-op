<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <% if registering %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% students.each do |student| %>
      <tr>
        <td><%= student.full_name %></td>
        <td><%= student.years_old %></td>
        <% if !registering %>
          <td>
            <%= link_to "Edit", edit_student_path(student), :class => 'btn btn-default btn-xs' %>
            <%= link_to "Remove", student_path(student), :method => :delete,
                        :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
