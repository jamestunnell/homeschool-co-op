<div class="page-header">
  <h2><%= @name %></h2>
</div>
<% if @students.any? %>
<%= render partial: 'students/table', locals:
  { :students => @students, :teaching => false, :registering => @registering } %>
<% else %>
<p>No children have been added.</p>
<% end %>

<% if !@registering %>
  <p><%= link_to "Add Child", new_student_path, :class => 'btn btn-primary' %></p>
<% end %>
<p><%= link_to raw("&larr; Back to Account"), account_path %></p>