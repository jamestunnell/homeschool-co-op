<table class="table table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Building</th>
    <th>Starts</th>
    <th>Ends</th>
    <% if show_actions %>
      <th>Actions</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% events.each do |event| %>
    <tr>
      <td><%= link_to event.title, event %></td>
      <td><%= link_to event.building.name, event.building %></td>
      <td><%= formal_date_time(event.start_time) %></td>
      <td><%= formal_date_time(event.end_time) %></td>
      <% if show_actions %>
        <td>
          <%= link_to "Edit", edit_event_path(event), :class => 'btn btn-default btn-xs' %>
          <%= link_to "Remove", event_path(event), :method => :delete,
                      :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %>
        </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
